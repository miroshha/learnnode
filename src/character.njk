{% extends 'src/partials/layout.njk' %}
{% block content %}
    <div class="content">
        <div class="card my-3">
            <header class="card-header">
                <p class="card-header-title">{{ character.name }}</p>
            </header>
            <div class="card-image">
                <figure class="image is-4by3" style="height: 70vh; margin: 0 auto;">
                    <img src="{{ character.image }}" alt="Placeholder image"/>
                </figure>
            </div>
            <div class="card-content">
                <div class="content">
                    <table class="table is-striped is-fullwidth">
                        <tbody>
                            <tr>
                                <th>Status</th>
                                <td>{{ character.status }}</td>
                            </tr>
                            <tr>
                                <th>Species</th>
                                <td>{{ character.species }}</td>
                            </tr>
                            <tr>
                                <th>Gender</th>
                                <td>{{ character.gender }}</td>
                            </tr>
                            <tr>
                                <th>Location</th>
                                <td>{{ character.location.name }}</td>
                            </tr>
                            <tr>
                                <th>Origin</th>
                                <td>{{ character.origin.name }}</td>
                            </tr>
                            <tr>
                                <th>Count of participated episodes</th>
                                <td>{{ character.episode.length }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}